@{
    ViewData["Title"] = "Farm Management - Home";
}

<div class="container">
    <h1 class="text-center">Farm Management Dashboard</h1>
    <p class="text-center">Welcome to the farm management system. Use the buttons below to manage your crops, schedules, and more.</p>

    <div class="row">
        <div class="col-md-3">
            <a href="@Url.Action("PlantingSchedule", "PlantingSchedule")" class="btn btn-primary btn-block">Planting Schedule</a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("HarvestTracking", "HarvestTracking")" class="btn btn-success btn-block">Harvest Tracking</a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Index", "Notifications")" class="btn btn-warning btn-block">Notifications</a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Index", "Growth")" class="btn btn-info btn-block">Growth History</a>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 100px;
    }
    .btn-block {
        padding: 20px;
        font-size: 18px;
    }
</style>