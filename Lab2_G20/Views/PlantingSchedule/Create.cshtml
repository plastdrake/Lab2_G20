@model Lab2_G20.Models.PlantingSchedule

@{
    ViewData["Title"] = "Create Planting Schedule";
}

<h2>Create Planting Schedule</h2>

<form asp-action="AddPlantingSchedule" method="post">
    <div class="form-group">
        <label asp-for="Crop"></label>
        <input asp-for="Crop" class="form-control" />
        <span asp-validation-for="Crop" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlannedPlantingDate"></label>
        <input asp-for="PlannedPlantingDate" class="form-control" type="date" />
        <span asp-validation-for="PlannedPlantingDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReminderDaysBefore"></label>
        <input asp-for="ReminderDaysBefore" class="form-control" type="number" />
        <span asp-validation-for="ReminderDaysBefore" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DaysToHarvest"></label>
        <input asp-for="DaysToHarvest" class="form-control" type="number" />
        <span asp-validation-for="DaysToHarvest" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a asp-action="PlantingSchedule" class="btn btn-secondary">Back to List</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
