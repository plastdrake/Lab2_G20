@model Lab2_G20.Models.GrowthHistory

@{
    ViewData["Title"] = "Delete Growth History";
}

<h1>Delete Growth History</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>GrowthHistory</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Crop Type</dt>
        <dd class="col-sm-10">@Model.Crop.CropType</dd>
        <dt class="col-sm-2">Date Recorded</dt>
        <dd class="col-sm-10">@Model.DateRecorded.ToShortDateString()</dd>
        <dt class="col-sm-2">Growth Stage</dt>
        <dd class="col-sm-10">@Model.GrowthStage</dd>
        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
