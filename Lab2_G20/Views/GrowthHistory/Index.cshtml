@model IEnumerable<Lab2_G20.Models.GrowthHistory>

@{
    ViewData["Title"] = "Growth History";
}

<h1>Growth History</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<form method="get" class="mb-3">
    <input type="text" name="search" placeholder="Search by Crop or Notes" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Crop.CropType)</th>
                <th>@Html.DisplayNameFor(model => model.DateRecorded)</th>
                <th>@Html.DisplayNameFor(model => model.GrowthStage)</th>
                <th>@Html.DisplayNameFor(model => model.Notes)</th>
                <th>Created At</th>
                <th>Last Updated</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Crop.CropType)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateRecorded)</td>
                    <td><span class="badge badge-info">@item.GrowthStage</span></td>
                    <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateRecorded)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
