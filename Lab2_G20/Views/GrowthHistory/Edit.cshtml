@model Lab2_G20.Models.GrowthHistory

<h1>Edit Growth History</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DateRecorded" value="@Model.DateRecorded.ToString("yyyy-MM-dd")" />

    <div class="form-group">
        <label asp-for="CropId" class="control-label"></label>
        <select asp-for="CropId" class="form-control">
            <option value="">Select Crop Type</option>
            <option value="1">Corn</option>
            <option value="2">Wheat</option>
            <option value="3">Soybeans</option>
            <option value="4">Rice</option>
            <!-- Add more options as necessary -->
        </select>
        <span asp-validation-for="CropId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GrowthStage" class="control-label"></label>
        <select asp-for="GrowthStage" class="form-control">
            <option value="">Select Growth Stage</option>
            <option value="Seedling">Seedling</option>
            <option value="Vegetative">Vegetative</option>
            <option value="Flowering">Flowering</option>
            <option value="Maturing">Maturing</option>
            <option value="Harvesting">Harvesting</option>
            <option value="Completed">Completed</option>
        </select>
        <span asp-validation-for="GrowthStage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="4">@Model.Notes</textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
