@model Lab2_G20.Models.GrowthHistory

@{
    ViewData["Title"] = "Create Growth History";
}

<h1>Create Growth History</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CropId" class="control-label"></label>
                <select asp-for="CropId" class="form-control" asp-items="ViewBag.CropTypes"></select>
                <span asp-validation-for="CropId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateRecorded" class="control-label"></label>
                <input asp-for="DateRecorded" class="form-control" readonly value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />
                <span asp-validation-for="DateRecorded" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GrowthStage" class="control-label"></label>
                <input asp-for="GrowthStage" class="form-control" />
                <span asp-validation-for="GrowthStage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
