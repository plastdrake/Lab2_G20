@model Lab2_G20.Models.GrowthHistory

<h1>Details</h1>

<div>
    <h4>Growth History</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Crop Id</dt>
        <dd class="col-sm-10">@Model.CropId</dd>

        <dt class="col-sm-2">Date Recorded</dt>
        <dd class="col-sm-10">@Model.DateRecorded.ToString("d")</dd>

        <dt class="col-sm-2">Growth Stage</dt>
        <dd class="col-sm-10">@Model.GrowthStage</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
